<html>
<head>
    <title>Stream overlay</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Share+Tech+Mono" rel="stylesheet" />
    <script
            src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <meta http-equiv="refresh" content="120" />
    <!--script>
    setTimeout(function(){
   window.location.reload(1);
}, 120000);
</script-->
    <style>
        #mainBox{
            background-color: #<%= bg1color%>;
            color: #<%= text2color%>;
            width: 100%;
            height: 4vh;
            position: fixed;
            left: 0;
            top: 0;
            font-size: 3vh;
            text-align: center;
            display: table-cell;
            padding-top: 0;
            vertical-align: middle;
        }
        .TitleText{

            font-family: 'Roboto', sans-serif;
            color: #<%= text1color%>;
            float: none;
        }
        .ContentText{
            font-family: 'Share Tech Mono', monospace;
            background-color: #<%= bg2color%>;
            float: none;
        }
    </style>
    <!--script>
        $(()=>{

        });
    </script-->
</head>
<body>
<p>color:<%= bg1color%></p>
<div id="mainBox">
    <% if(error === "noDisplay") {%>
    <span class="TitleText error" id="noDisplayError">Error: you must select at least one item to display</span>
    <span class="contentText error" id="noDisplayText">if you are seeing this on OBS, please visit Dynalogic.org:8080/info to reconfigure</span>
    <% } if(position !== "notRequested") { %>
    <span id="position" class="TitleText position"> Current Position: </span>
    <span class="ContentText position"><%= position %></span>
    <% } if(callsign !== "notRequested") {%>
    <span id="Callsign" class="TitleText callsign"> Callsign: </span>
    <span class="contentText callsign"><%= callsign %></span>
    <% } if(frequency !== "notRequested") {%>
    <span id="Frequency" class="TitleText frequency"> Frequency: </span>
    <span class="ContentText frequency"><%= frequency %></span>
    <% } if(online !== "notRequested") {%>
    <span id="Online" class="TitleText online"> Time Online: </span>
    <span class="ContentText online"><%= online %></span>
    <% }%>
</div>
<!--%= url %-->
</body>
</html>
